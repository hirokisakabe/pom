{
  "name": "@hirokisakabe/pom",
  "version": "0.1.5",
  "description": "PowerPoint Object Model - A declarative TypeScript library for creating PowerPoint presentations",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://github.com/hirokisakabe/pom#readme",
  "bugs": {
    "url": "https://github.com/hirokisakabe/pom/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hirokisakabe/pom.git"
  },
  "license": "MIT",
  "author": "Hiroki Sakabe",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build && npm run lint && npm run fmt:check && npm run typecheck && npm run test:run",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "vrt": "tsx vrt/runVrt.ts",
    "vrt:update": "tsx vrt/runVrt.ts --update",
    "vrt:docker": "docker compose run --rm vrt",
    "vrt:docker:update": "docker compose run --rm vrt-update"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/image-size": "0.7.0",
    "@types/pngjs": "6.0.5",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jiti": "2.6.1",
    "pixelmatch": "7.1.0",
    "pngjs": "7.0.0",
    "prettier": "3.6.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "canvas": "3.2.0",
    "image-size": "2.0.2",
    "pptxgenjs": "4.0.1",
    "yoga-layout": "3.2.1",
    "zod": "4.1.12"
  }
}
